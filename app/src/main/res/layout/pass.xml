		android:layout_height="wrap_content"/>
	
	<Button
		android:text="9"
		android:onClick="btn9"
		android:layout_marginTop="-85px"
		android:layout_marginLeft="360px"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
