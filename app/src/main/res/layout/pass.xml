	<TextView
		android:layout_marginBottom="-490px"
		android:textColor="#003f11"
		android:textSize="24px"
		android:text="forgot password?"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

    
</LinearLayout>
